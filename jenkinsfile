
pipeline {
    agent any

    stages {
        stage('Clone') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/mayur-lodhe/jenkins-cicd-flask-app.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t flaskapp:latest .'
            }
        }

        stage('Stop Old Container') {
            steps {
                sh 'docker stop flaskapp || true'
                sh 'docker rm flaskapp || true'
            }
        }

        stage('Deploy New Container') {
            steps {
                sh 'docker run -d -p 5000:5000 --name flaskapp flaskapp:latest'
            }
        }
    }
}
